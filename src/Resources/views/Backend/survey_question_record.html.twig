<div class="survey_flex-row" data-js-record-source="{{ path('mvo_survey_question', {id: question.id}) }}">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="1 1 22 22" stroke-width="1.5"
         stroke="#aaaaaa" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <rect x="5" y="3" width="14" height="18" rx="2"/>
        <line x1="9" y1="7" x2="15" y2="7"/>
        <line x1="9" y1="11" x2="15" y2="11"/>
        <line x1="9" y1="15" x2="13" y2="15"/>
    </svg>
    <div>
        {% set class = 'cte_type ' ~ (question.published ? 'published' : 'unpublished') %}

        <div class="survey_question_type {{ class }}">
            {{ ('survey_question_type.' ~ type)|trans({}, 'contao_survey') }} ({{ question.name }})
        </div>
        <span class="survey_question_title">{{ question.question }}</span>
        {%- if question.mandatory %}<span class="mandatory">*</span>{% endif %}
    </div>
</div>